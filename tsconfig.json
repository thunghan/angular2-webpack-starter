{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "files": [
    "typings/main.d.ts",
    "app/config/globals.d.ts",
    "app/bootstrap/bootstrap.ts",
    "app/bootstrap/vendor.ts",
    "app/components/app/app.component.ts",
    "app/components/app/app.component.spec.ts",
    "app/components/home/home.component.ts",
    "app/components/home/home.component.spec.ts",
    "app/directives/x-large.ts",
    "app/directives/x-large.spec.ts",
    "app/providers/title.spec.ts",
    "app/providers/title.ts",
    "test/injector.spec.ts",
    "test/sanity-test.spec.ts"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
